
@{
    ViewData["Title"] = "تغییر رمزعبور";
}

@model RegisterViewModel
<section class="login-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="login-form">
                <h3>تغییر رمزعبور</h3>

                @if (TempData["changepassfail"] != null)
                {
                    <div class="alert alert-danger" role="alert" id="loginfail">@TempData["changepassfail"]</div>
                }
                <form asp-action="changepasswordconfirm" asp-controller="account">
                    <div class="form-group">
                        <label for="username"><i class="icofont-lock"></i></label>
                        <input name="currentPassword" type="password" class="form-control" placeholder="رمزعبور فعلی" required />
                    </div>

                    <div class="form-group">
                        <label for="password"><i class="icofont-lock"></i></label>
                        <input asp-for="password" type="password" class="form-control" placeholder="رمزعبور جدید">
                        <span asp-validation-for="password"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</section>
