
@{
    ViewData["Title"] = "ویرایش دسته بندی";
}

@model Category
<section class="news-details-area pb-40">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="news-details">
                    <div class="comments-area">
                        <div class="comment-respond">
                            <h3 style="margin-bottom:25px" class="comment-reply-title">ویرایش دسته بندی</h3>
                            <form asp-action="categoryupdateconfirm" asp-controller="post" asp-route-id="@Model.id" class="comment-form" novalidate="novalidate">

                                <p style="margin-bottom:50px" class="comment-form-email">
                                    <label>نام انگلیسی دسته بندی</label>
                                    <input name="Ename" type="text" value="@Model.Ename">
                                </p>
                                <p style="margin-bottom:50px" class="comment-form-email">
                                    <label>نام فارسی دسته بندی</label>
                                    <input name="Pname" type="text" value="@Model.Pname">
                                </p>
                                <p class="form-group">
                                    <label class="remember-me">
                                        <input name="IsInMainPage" type="checkbox" @(Model.IsInMainPage ? "checked" : "")>
                                        قرار گیری دسته بندی در صفحه اصلی سایت(مجاز به انتخاب حداکثر 3 دسته بندی)
                                    </label>
                                </p>

                                <div class="modal fade" id="categoryupdatemodal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color:red">
                                                <h3>ویرایش دسته بندی</h3>
                                            </div>
                                            <div class="modal-body">
                                                <p>آیا مایل به ویرایش دسته بندی هستید؟</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-danger" data-dismiss="modal">خیر</button>
                                                <button class="btn btn-success" style="margin-right:10px">بله</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <p class="form-submit">
                                <input type="submit" id="categoryupdatebtn" class="submit" value="ثبت ویرایش">
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $(categoryupdatebtn).click(function () {
            $(categoryupdatemodal).modal()
        })
    })
</script>

